{
  "schemaVersion": 1,
  "id": "nexia",
  "version": "${version}",

  "name": "Nexia",
  "description": "The mod for the Nexia CTS server.",
  "authors": [
    "NotCoded",
    "Blumbo"
  ],
  "contributors": [
    "Shinkume",
    "betterclient",
    "infinityy",
    "r6653116",
    "SurgeFlame",
    "Stunf"
  ],
  "contact": {
    "homepage": "https://nexia.dev",
    "sources": "https://github.com/nexia-cts/Nexia-Mod"
  },

  "license": "GPL-3.0",
  "icon": "assets/nexia/logo.png",

  "environment": "server",
  "accessWidener" : "nexia.accesswidener",
  "entrypoints": {
    "main": [
      "com.nexia.core.NexiaCore",
      "com.nexia.ffa.NexiaFfa",
      "com.nexia.minigames.NexiaMinigames",
      "com.nexia.discord.NexiaDiscord"
    ],
    "nexus": [
      "com.nexia.core.NexiaCore"
    ]
  },
  "mixins": [
    "core.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "minecraft": ["1.16.3-combat.8.c", "1.16.2-1.16.combat-6"],
    "fabric": "*",
    "nexus-api": ">=0.1.15",
    "fantasy": ">=0.4.3",
    "collective-fabric": ">=1.16.5-5.50",
    "java": ">=21"
  }
}
