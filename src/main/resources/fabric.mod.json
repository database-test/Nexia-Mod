{
  "schemaVersion": 1,
  "id": "nexia",
  "version": "${version}",

  "name": "Nexia",
  "description": "The mod for the Nexia CTS server.",
  "authors": [
    "NotCoded"
  ],
  "contributors": [
    "Shinkume",
    "betterclient",
    "r6653116",
    "SurgeFlame"
  ],
  "contact": {
    "homepage": "https://nexia.dev",
    "sources": "https://github.com/nexia-cts/Nexia-Mod"
  },

  "license": "LGPL-3.0",
  "icon": "assets/nexia/logo.png",

  "environment": "server",
  "accessWidener" : "nexia.accesswidener",
  "entrypoints": {
    "main": [
      "com.nexia.core.Main",
      "com.nexia.ffa.Main",
      "com.nexia.minigames.Main",
      "com.nexia.discord.Main"
    ],
    "factory": [
      "com.nexia.core.Main"
    ]
  },
  "mixins": [
    "core.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "minecraft": ["1.16.3-combat.8.c", "1.16.2-1.16.combat-6"],
    "fabric": "*",
    "factory-api": "*",
    "collective-fabric": ">=1.16.5-5.50",
    "saveandloadinventories-fabric": "*"
